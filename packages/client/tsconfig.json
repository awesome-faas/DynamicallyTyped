{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "./dist",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"declaration": true,
		"skipLibCheck": true,
		"esModuleInterop": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "**/__tests__/*", "test"]
}
